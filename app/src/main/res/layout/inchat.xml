<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/inchat_usericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_key"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/inchat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="유저"
            />
        <TextView
            android:id="@+id/inchat_usertext"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="fkashfdjhjdkasfhkjdhfjkhahsdfohif"
            android:background="@drawable/stroke_text"
            android:padding="10dp"
            android:maxEms="10"
            android:textColor="@color/white"

            />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/inchat_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="2023-09-22\n오전 09:24"/>

</androidx.appcompat.widget.LinearLayoutCompat>